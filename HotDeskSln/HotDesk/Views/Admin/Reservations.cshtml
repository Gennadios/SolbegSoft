@model IEnumerable<Reservation>
@{
    ViewData["Title"] = "Reservations";
}

<body class="admin-page">
    <div class="status">
        Logged in as @User.Identity.Name
    </div>
    <ul class="navigation">
        <li><a asp-action="Roles" asp-controller="Admin">Manage Roles</a></li>
        <li><a asp-action="Users" asp-controller="Admin">Manage Users</a></li>
        <li><a asp-action="Workplaces" asp-controller="Admin">Manage Workplaces</a></li>
        <li><a asp-action="Devices" asp-controller="Admin">Manage Devices</a></li>
        <li><a asp-action="Reservations" asp-controller="Admin">Manage Reservations</a></li>
        <li class="logout"><a asp-action="Logout" asp-controller="Account">Logout</a></li>
    </ul>
    <h1 class="table-header">Reservations</h1>
    <main>
        <form asp-action="Reservations" asp-controller="Admin" method="post">
            <table>
                <thead>
                    <tr>
                        <th>Reservation ID</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td>@reservation.Id</td>
                            <td>@reservation.Date</td>
                            <td><button class="btn-danger" type="submit" name="roleId" value="@reservation.Id">Remove</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
        <form asp-action="Roles" asp-controller="Admin">
            <label>Role Name:</label>
            <input type="text" name="roleName" />
            <button class="btn-info" type="submit">Add Role</button>
        </form>
    </main>
</body>
